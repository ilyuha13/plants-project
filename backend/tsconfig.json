{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "allowJs": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "isolatedModules": false,
    "lib": ["ES2021"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2021"
  },
  "references": [{ "path": "../shared" }],
  "include": ["src/**/*"]
}
