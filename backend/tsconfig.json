{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "..",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "allowJs": true,
    "downlevelIteration": true,
    "isolatedModules": false,
    "lib": ["ES2021"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2021"
  },
  "include": ["src/**/*", "../shared/src/**/*"]
}
