generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model User {
    id String @id @default(uuid())
    nick String @unique
    password String
    createdAt DateTime @default(now())
    role Role @default(USER)
}

enum Role {
    ADMIN
    USER
}

model Plant {
    plantId String @unique @id @default(uuid())
    variety String
    genus String
    description String
    imagesUrl String[]
    price Int
    createdAt DateTime @default(now())
}