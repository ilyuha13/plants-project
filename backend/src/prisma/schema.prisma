generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model User {
    id String @id @default(uuid())
    nick String @unique
    password String
    createdAt DateTime @default(now())
    role Role @default(USER)
}

enum Role {
    ADMIN
    USER
}

model Species {
    speciesId String @id @default(uuid())
    name String
    description String
    imagesUrl String[]
    varieties Variety[]
}

model Variety {
    varietyId String @id @default(uuid())
    species Species @relation(fields: [speciesId], references: [speciesId])
    speciesId String
    name String
    description String
    lifeForm String
    variegation String
    imagesUrl String[]
    plants Plant[]
    
    
}

model Plant {
    plantId String @unique @id @default(uuid())
    variety Variety @relation(fields: [varietyId], references: [varietyId])
    varietyId String
    description String
    imagesUrl String[]   
    price Int
    createdAt DateTime @default(now())
}